<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quadstack.everroutine">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity android:name=".EverRoutine" android:screenOrientation="portrait"/>
        <activity android:name=".days_to_remember.DaysToRemember" android:screenOrientation="portrait"/>
        <activity android:name=".days_to_remember.DaysToRememberAddEdit" android:screenOrientation="portrait"/>
        <activity android:name=".tasks_pool.TasksPool" android:screenOrientation="portrait"/>
        <activity android:name=".tasks_pool.TasksPoolAddEdit" android:screenOrientation="portrait"/>
        <activity android:name=".tasks.TabActivity" android:screenOrientation="portrait"/>
        <activity android:name=".tasks.TaskAddEdit" android:screenOrientation="portrait"/>
        <activity android:name=".about_us.AboutUsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".statistics.activity_tracker" android:screenOrientation="portrait"/>
        <activity android:name=".notification_manager.notification_activity" android:screenOrientation="portrait"/>
        <activity android:name=".notification_manager.Loading_Notifications" android:screenOrientation="portrait"/>
        <receiver android:name=".notification_manager.Notification_receiver" android:screenOrientation="portrait"/>
        <activity android:name=".tasks.import_from_tasks_pool.ImportFromTasksPool" android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreenActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>