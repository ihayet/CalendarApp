<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsPopup"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/torn_paper">
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/titleImageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_label"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notificationsTextView"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textStyle="bold"/>
        <Switch
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/alarmToneTextView"
            android:layout_below="@+id/titleImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Tone"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/alarmToneBtn"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Select Tone"
            android:textAlignment="center"/>
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ImageButton
        android:id="@+id/aboutUsBtn"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:src="@drawable/about_us"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/settingsClose"
        android:layout_marginLeft="100dp"/>
</LinearLayout>