<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tasks.import_from_tasks_pool.ImportFromTasksPool"
    android:id="@+id/importTasksPoolLayout"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/importTasksPoolTitle"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/importTasksPoolListView"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:layout_below="@+id/importTasksPoolTitle"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/importTasksPoolListEmpty"
        android:gravity="center"
        android:text="No items in the list"
        />

</RelativeLayout>
